{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "src/*.spec.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
