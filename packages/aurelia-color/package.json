    "src"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "bundle": "webpack",
    "clean": "rimraf dist lib *.tsbuildinfo",
